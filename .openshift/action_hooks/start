#!/bin/bash

set -e
export GOROOT=$OPENSHIFT_DATA_DIR/go
export GOPATH=$OPENSHIFT_DATA_DIR/build
export PATH=$GOPATH/src/$OPENSHIFT_APP_NAME:$GOPATH/bin:$PATH

OPTS="-port=$OPENSHIFT_DIY_PORT -logtostderr=true -stderrthreshold=INFO"
LOG=$OPENSHIFT_DIY_LOG_DIR/$OPENSHIFT_APP_NAME.log
nohup $OPENSHIFT_APP_NAME $OPTS > $LOG 2>&1 &
echo $! > $OPENSHIFT_DATA_DIR/$OPENSHIFT_APP_NAME.pid
